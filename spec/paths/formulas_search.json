{
  "summary": "Search Formulas",
  "description": "Search Formulas and Formula Versions",
  "get": {
    "tags": [
      "Formulas"
    ],
    "description": "Searches formulas or formula versions for matches on name type and search_type filters",
    "summary": "Search formulas",
    "operationId": "search_formulas",
    "parameters": [
      {
        "schema": { "type": "string" },
        "in": "query",
        "name": "name",
        "required": true,
        "description": "Name of the formula to search for"
      },
      {
        "schema": { "type": "string" },
        "in": "query",
        "name": "type",
        "required": true,
        "description": "Type of formula to search for, one of: (boms, kits, disassemblies)"
      },
      {
        "schema": { "type": "string" },
        "in": "query",
        "name": "search_type",
        "required": true,
        "description": "Type of data to search for, one of: (formula, formula_version)"
      }
    ],
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/formulas.json"
            },
            "examples": {
              "Example": {
                "value": {
                  "$ref": "../components/examples/responses/formulas.json"
                }
              }
            }
          }
        }
      }
    }
  }
}
