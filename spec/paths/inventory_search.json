      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {}
          },
          "examples": {
            "Name": {
              "value": {
                "name": "Product Name Here"
              }
            },
            "Single SKU": {
              "value": {
                "sku_list": "123456"
              }
            },
            "Multiple SKUs": {
              "value": {
                "sku_list": [
                  "SK001",
                  "SK002"
                ]
              }
            }
          }
        }
      },
      "description": "Search can be performed based on EITHER the inventory item name, OR a single SKU or an array of SKUs. The inventory item name will take precedence over the SKU parameter. Multiple matches may be returned."
