            "schema": {
              "type": "integer"
            },
            "description": "Total count of results"
          },
          "Per-Page": {
            "schema": {
              "type": "integer"
            },
            "description": "Number of results per page"
          },
          "Link": {
            "schema": {
              "type": "string"
            },
            "description": "URLs for the next or previous pages of the results"
          }
        },
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/inventory.json"
            },
            "examples": {
              "Example": {
                "value": {
                  "id": 3,
                  "name": "Bulk chocolate",
                  "category_name": "Ingredients",
                  "on_hand": 0,
                  "unit_of_use": "pound",
                  "unit_of_purchase": "pound",
                  "purchase_conversion": 1,
                  "property": "work_in_progress",
                  "sku": "123456",
                  "pull_strategy": "Hand Pick",
                  "reorder_point": 10,
                  "lead_time": 0,
                  "retired": false,
                  "waste_percentage": 0,
                  "created_at": "2020-09-11T13:57:46.825Z",
                  "updated_at": "2020-09-11T13:57:46.825Z"
                }
              }
            }
          }
        }
      }
    },
    "operationId": "search_inventory",
