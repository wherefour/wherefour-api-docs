{
  "type": "object",
  "description": "At least one credit item or custom line item is required.",
  "properties": {
    "credit_number": {
      "type": "string"
    },
    "credit_date": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "order_id": {
      "type": "integer"
    },
    "invoice_id": {
      "type": "integer"
    },
    "salesperson_id": {
      "type": "integer"
    },
    "credit_from_address_id": {
      "type": "integer"
    },
    "total": {
      "type": "number"
    },
    "customer_message": {
      "type": "string"
    },
    "internal_notes": {
      "type": "string"
    },
    "credit_items_attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Required when editing an existing credit item"
          },
          "inventory_id": {
            "type": "integer",
            "description": "Required when creating a new credit item"
          },
          "count": {
            "type": "number",
            "description": "Required when creating a new credit item"
          },
          "override_unit_price": {
            "type": "number"
          },
          "_destroy": {
            "type": "boolean",
            "description": "Setting this to true will delete the specified credit item"
          }
        }
      }
    },
    "custom_line_items_attributes": {
      "$ref": "custom_line_items.json"
    }
  }
}
